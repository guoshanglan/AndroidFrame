<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_sheet_dialog"
    android:orientation="vertical"
    android:paddingTop="10dp"
    tools:viewBindingIgnore="true">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/vRecycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_height"
        android:background="@color/dialog_daynight_division_background" />

    <com.zhuorui.commonwidget.StateButton
        android:id="@+id/btnCancel"
        style="@style/BtnStyle"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="@color/dialog_daynight_text_color_01"
        android:text="@string/cancel" />

</LinearLayout>