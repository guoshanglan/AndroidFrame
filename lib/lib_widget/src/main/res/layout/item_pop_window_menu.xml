<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:viewBindingIgnore="true">

    <View
        android:id="@+id/menu_pop_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/division_height"
        android:layout_marginLeft="1.5dp"
        android:layout_marginRight="1.5dp"
        android:background="@color/dialog_daynight_division_background" />

    <TextView
        android:id="@+id/menu_pop_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="50dp"
        android:minHeight="40dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:paddingLeft="1.5dp"
        android:paddingRight="1.5dp"
        android:textColor="@color/selector_menu_pop_item_textcolor"
        android:textSize="12sp" />
</FrameLayout>